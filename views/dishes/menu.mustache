<!DOCTYPE html>
<html lang="en">
<head>
  {{>head}}
  <title>Document</title>

</head>
<body class="bg-gray-900">
   {{>nav}}
    
    <div class="grid grid-cols-1 gap-2 lg:grid-cols-2">
      <div class="m-4">
        <h2 class="text-yellow-500 border-b-2 border-yellow-500 text-3xl">Pizza</h2>
        <div class="flex flex-row m-4">

          <img src="" alt="">
        </div>
      </div>

      <div class="m-4">
        <h2 class="text-yellow-500 border-b-2 border-yellow-500 text-3xl">Pasta</h2>
        {{#pastas}}
          <div class="flex flex-row m-4 bg-gray-700 p-2">
            <img class="card-image" src="/images/{{image}}" alt="">
            <div class="flex flex-col">
              <h3 class="text-yellow-500 w-auto m-2">{{name}}</h3>
              <p class="flex space-x-6">
                {{#ingredients}}
                  <span class="text-yellow-500">{{name}}</span>
                {{/ingredients}}
              </p>
            </div>
          </div>
        {{/pastas}}
      </div>
      
    </div>


  {{>footer}}

</body>